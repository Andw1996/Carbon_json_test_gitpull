<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity"
    >


    <TextView
        android:id="@+id/environResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginTop="124dp"
        android:hint="Check if renewable production is high"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/ctotal"

        android:textSize="24sp"
        android:hint="total mw made"
        android:layout_below="@id/environResult"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:id="@+id/cfetchedData"
        android:textSize="24sp"
        android:hint="Fetched text here"
        android:layout_below="@id/ctotal"/>

    <Button
        android:id="@+id/nextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="36dp"
        android:onClick="moreDetail"
        android:text="More Details" />

    <TextView
        android:id="@+id/trafficLight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="   " />



</RelativeLayout>